<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="link_wheel" params="name">
        <link name="${name}">
            <inertial>
              <mass value="3.871" />
              <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
              <inertia ixx="0.056425" ixy="0.0" ixz="0.0"
                      iyy="0.094098" iyz="0.0"
                      izz="0.056425" />
            </inertial>

            <collision name="link_right_wheel_collision">
              <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
              <geometry>
                <cylinder length="0.14" radius="0.2"/>
              </geometry>
            </collision>

            <visual name="${name}_visual">
              <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
              <geometry>
                <cylinder length="0.14" radius="0.2"/>
              </geometry>
            </visual>
        </link>
    </xacro:macro>
    
    <xacro:macro name="joint_wheel" params="name child origin_xyz origin_rpy">
      <joint name="${name}" type="continuous">
        <origin rpy="${origin_rpy}" xyz="${origin_xyz}"/>
        <child link="${child}"/>
        <parent link="wheel_link"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="1" velocity="100"/>
        <joint_properties damping="1.0" friction="1.0"/>
      </joint>
    </xacro:macro>
    
    <xacro:macro name="cylinder_inertia" params="mass r l">
      <inertia  ixx="${mass*(3*r*r+l*l)/12}" ixy = "0" ixz = "0"
                iyy="${mass*(3*r*r+l*l)/12}" iyz = "0"
                izz="${mass*(r*r)/2}" />
    </xacro:macro>


    <xacro:macro name="base_joint" params="name child origin_xyz">
      <joint name="${name}" type="prismatic">
        <origin rpy="0 0 0" xyz="${origin_xyz}"/>
        <child link="${child}"/>
        <parent link="wheel_link"/>
        <axis rpy="0 0 0" xyz="1 0 0"/>
        <limit effort="10" lower="-0.35" upper="0.35" velocity="0.1" />
      </joint>
    </xacro:macro>
    
    <xacro:macro name="cylinder_inertia" params="mass r l">
      <inertia  ixx="${mass*(3*r*r+l*l)/12}" ixy = "0" ixz = "0"
                iyy="${mass*(3*r*r+l*l)/12}" iyz = "0"
                izz="${mass*(r*r)/2}" />
    </xacro:macro>
</robot>