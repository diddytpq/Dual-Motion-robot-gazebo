<?xml version="1.0"?>

<robot name="kitech_segway_type" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find robot_description)/urdf/kitech_segway/materials.xacro" />

  <xacro:property name="deg_to_rad" value="0.01745329251994329577"/>

  <!-- Constants -->
  <xacro:property name="M_SCALE" value="0.001 0.001 0.001"/> 
  <xacro:property name="M_PI" value="3.14159"/>

  <!--     -->
   <xacro:macro name="transmission_block" params="joint_name n ">
	  <transmission name="tran${n}">
	    <type>transmission_interface/SimpleTransmission</type>
	    <joint name="${joint_name}">
	      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
	    </joint>
	    <actuator name="motor${n}">
	      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
	      <mechanicalReduction>1</mechanicalReduction>
	    </actuator>
	  </transmission>
   </xacro:macro>

  <!-- BASE-FOOTPRINT -->
  <!-- base_footprint is a fictitious link(frame) that is on the ground right below base_link origin -->
  <link name="base_footprint">
    <inertial>
      <mass value="0.0001" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
          iyy="0.0001" iyz="0.0" 
          izz="0.0001" />
    </inertial>
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <box size="0.001 0.001 0.001" />
        </geometry>
    </visual>
  </link>

  <gazebo reference="base_footprint">
    <turnGravityOff>false</turnGravityOff>
  </gazebo>

  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_footprint"/>
    <child link="base_link" />
  </joint>

 <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://robot_description/mesh/stl_brep/Segway Type_rev3_body.stl" scale="0.001 0.001 0.001"/>
      </geometry>
        <origin rpy="${90.*M_PI/180.} 0 0" xyz="0 0 0.5"/>
    </visual>

    <collision>
      <geometry>
	      <box size="2.2 0.7 0.2"/>
      </geometry>
      <origin rpy="${90.*M_PI/180.} 0 0" xyz="0 0 0.45"/>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="20"/>
      <inertia ixx="2.2124416e-03" ixy="-1.2294101e-05" ixz="3.4938785e-05"
               iyy="2.1193702e-03" iyz="-5.0120904e-06"
               izz="2.0064271e-03" />
    </inertial>

  </link>

  <gazebo reference="base_link">
    <turnGravityOff>false</turnGravityOff>
    <material>Gazebo/Darkgreen</material>
  </gazebo>

  <link name="mp_left_wheel">
    <visual>
      <geometry>
        <mesh filename="package://robot_description/mesh/stl_brep/wheel_0.35.stl" scale="0.001 0.001 0.001"/>
      </geometry>
        <origin rpy="0 0 ${90.*M_PI/180.}" xyz="0 0 0"/>
    </visual>

    <collision>
      <geometry>
	      <cylinder length="0.14" radius="0.2"/>
      </geometry>
      <origin rpy="${90.*M_PI/180.} 0 0" xyz="0 0 0"/>
    </collision>


    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5"/>
      <inertia ixx="2.2124416e-03" ixy="-1.2294101e-05" ixz="3.4938785e-05"
               iyy="2.1193702e-03" iyz="-5.0120904e-06"
               izz="2.0064271e-03" />
    </inertial>
  </link>

  <gazebo reference="mp_left_wheel">
    <turnGravityOff>false</turnGravityOff>
    <material>Gazebo/DarkGrey</material>

  </gazebo>

  <joint name="mp_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="mp_left_wheel"/>
    <origin xyz="-0.06 0.33 0.2"/>
    <axis xyz="0 1 0" />
  </joint>

  <link name="mp_right_wheel">
    <visual>
      <geometry>
        <mesh filename="package://robot_description/mesh/stl_brep/wheel_0.35.stl" scale="0.001 0.001 0.001"/>
      </geometry>
        <origin rpy="0 0 ${-90.*M_PI/180.}" xyz="0 0 0"/>
    </visual>

    <collision>
      <geometry>
	      <cylinder length="0.14" radius="0.2"/>
      </geometry>
      <origin rpy="${-90.*M_PI/180.} 0 0" xyz="0 0 0"/>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5"/>
      <inertia ixx="2.2124416e-03" ixy="-1.2294101e-05" ixz="3.4938785e-05"
               iyy="2.1193702e-03" iyz="-5.0120904e-06"
               izz="2.0064271e-03" />
    </inertial>

  </link>

  <gazebo reference="mp_right_wheel">
    <turnGravityOff>false</turnGravityOff>
    <material>Gazebo/DarkGrey</material>
  </gazebo>

  <joint name="mp_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="mp_right_wheel"/>
    <origin xyz="-0.06 -0.33 0.2"/>
    <axis xyz="0 1 0" />
  </joint>

  <!-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
  <!-- Transmissions for ROS Control -->
   <xacro:transmission_block joint_name="mp_left_wheel_joint" n="1"/>
   <xacro:transmission_block joint_name="mp_right_wheel_joint" n="2"/>

 <!-- ros_control plugin -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/kitech_robot</robotNamespace>
      <robotSimType>gazebo_ros_control/DefaultRobotHWSim</robotSimType>
    </plugin>
  </gazebo>

</robot>
